        <name>Reschedule</name>
        <onclick>rescheduleEvent()</onclick>
        <order>100</order>
        <script><![CDATA[function rescheduleEvent() {
	gsftPrompt("Enter the new event date (YYYY-MM-DD HH:MM:SS :","New Event Date",function(newDate){
		if (!newDate) {
			alert("No date entered. Reschedule cancelled.");
			return;
		}

		var dateRegex = /^\d{4}-\d{2}-\d{2} \d{2}:\d{2}:\d{2}$/;
		if (!dateRegex.test(newDate)) {
			alert("Invalid date format. Please use YYYY-MM-DD HH:MM:SS");
			return;
		}

		var ga = new GlideAjax('x_1801001_event_ma.RescheduleEventUtils');
		ga.addParam('sysparm_name', 'reschedule');
		ga.addParam('sysparm_sys_id', g_form.getUniqueValue());
		ga.addParam('sysparm_new_date', newDate);
		ga.getXMLAnswer(function(response) {
			g_form.addInfoMessage('Event Rescheduled');
			g_form.reload();
		});
	},function(){
		alert("No date entered. Reschedule cancelled.");
	});
}]]></script>
