        <name>Cancel Task</name>
        <onclick>onClick()</onclick>
        <order>100</order>
        <script><![CDATA[function onClick() {
  var ga = new GlideAjax('x_1801001_event_ma.CancelTaskUtils');
  ga.addParam('sysparm_name', 'cancelTask');
  ga.addParam('sysparm_sys_id', g_form.getUniqueValue());

  ga.getXMLAnswer(function(response) {
    var answer = response.responseXML.documentElement.getAttribute("answer");
    if (answer == "success") {
      g_form.setValue('x_status', 'cancelled');
      g_form.save();
      alert('Task has been cancelled and the assigned user has been notified.');
    } else {
      alert('Failed to cancel task.');
    }
  });
}]]></script>
